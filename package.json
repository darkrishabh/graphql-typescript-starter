{
	"name": "graphql-typescript-starter",
	"version": "1.0.0",
	"description": "Boilerplate for Typescript + GraphQL server",
	"main": "index.js",
	"scripts": {
		"start": "node dist/main/server.js",
		"compile": "tsc",
		"prettier": "prettier --write ./src",
		"lint": "prettier -c ./src && eslint ./src/**/*.ts",
		"lint:fix": "npm run prettier && eslint ./src/**/*.ts --fix",
		"test": "mocha -r ts-node/register src/**/*.test.ts --exit"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/express": "^4.17.3",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.9.3",
		"@types/sinon": "^7.5.2",
		"@typescript-eslint/eslint-plugin": "^2.25.0",
		"@typescript-eslint/parser": "^2.25.0",
		"chai": "^4.2.0",
		"chai-http": "^4.3.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-prettier": "^3.1.2",
		"mocha": "^7.1.1",
		"nodemon": "^2.0.2",
		"prettier": "^2.0.2",
		"sinon": "^9.0.1",
		"ts-node": "^8.8.1",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"apollo-server-express": "^2.11.0",
		"express": "^4.18.2",
		"graphql": "^14.6.0"
	}
}
